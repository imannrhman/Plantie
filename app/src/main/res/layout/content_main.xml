<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view_jumlah"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="66dp"
        android:layout_width="match_parent"
        android:layout_height="134dp"
        app:cardCornerRadius="16dp"
        android:elevation="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_jumlah_tanaman"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                android:textAlignment="center"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Tanaman Anda"
                android:textSize="20sp"
                android:fontFamily="@font/montserratsemibold"
                />
            <TextView
                android:layout_marginStart="16dp"
                android:layout_width="200dp"
                android:textAlignment="center"
                android:textSize="40sp"
                android:layout_below="@+id/tv_jumlah_tanaman"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserratsemibold"
                android:text="0"
                />
            <ImageView
                android:layout_marginEnd="16dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/vector_gardening"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:gravity="left"
        android:text="List Tanaman"
        android:fontFamily="@font/montserrat"
        app:layout_constraintBottom_toTopOf="@id/recycler_view"
        app:layout_constraintHorizontal_bias="0.08"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/recycler_view"
        app:cardCornerRadius="16dp"
        android:elevation="5dp"
        android:layout_marginHorizontal="26dp"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        app:layout_constraintTop_toBottomOf="@id/card_view_jumlah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="76dp"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/gambar"
                android:scaleType="centerCrop"
                android:layout_height="match_parent"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_margin="16dp"
                android:layout_width="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/tv_waktu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="16dp"
                    android:text="30d"
                    />
                <View
                    android:layout_gravity="center"
                    android:id="@+id/icon_alarm"
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:layout_alignEnd="@+id/tv_waktu"
                    android:background="@drawable/ic_alarm_black_24dp"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tanaman Cabe Rawit"
                android:textColor="#fff"
                android:layout_margin="16dp"
                android:layout_alignParentBottom="true"
                android:textSize="20dp"
                android:fontFamily="@font/montserratsemibold"
                />
        </RelativeLayout>


        </FrameLayout>

    </androidx.cardview.widget.CardView>
    <View
        android:id="@+id/vector2"
        android:layout_width="248dp"
        android:layout_height="207dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/vector_daun_bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>