<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal">

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/img_penyakit"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_margin="10dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="0dp"
            android:layout_marginLeft="0dp"
            android:scaleType="centerCrop"
            app:riv_corner_radius="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txt_penyakit"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="Penyakit layu pada tanaman sayur dan cara mengatasinya"
                android:textColor="#787878"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom">

                    <ImageView
                        android:id="@+id/img_jenis_penyakit"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:scaleType="centerCrop"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_virus_penyakit"/>

                    <TextView
                        android:id="@+id/txt_jenis_tanaman"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:text="Virus"
                        android:textColor="#2F80ED"
                        android:textSize="12sp" />

                </LinearLayout>

               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">

                   <androidx.cardview.widget.CardView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       app:cardBackgroundColor="#FCE5D2"
                       app:cardCornerRadius="2dp"
                       app:cardElevation="0dp"
                       android:layout_marginLeft="180dp"
                       android:layout_gravity="bottom">

                       <TextView
                           android:id="@+id/txt_level"
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="Bahaya"
                           android:textSize="12sp"
                           android:textColor="#F4A560"
                           android:layout_marginHorizontal="12dp"
                           android:layout_marginVertical="3dp"/>

                   </androidx.cardview.widget.CardView>

               </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>