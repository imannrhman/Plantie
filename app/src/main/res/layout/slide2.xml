<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginHorizontal="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/btn_menanam_board"/>

        <com.codesgood.views.JustifiedTextView
            android:layout_marginTop="10dp"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plantie mempunyai fitur untuk memberikan informasi cara menanam suatu tanaman ! "
            android:fontFamily="@font/montserratmedium"
            android:textColor="#B3000000"
            android:textSize="12dp" />

        <com.codesgood.views.JustifiedTextView
            android:layout_marginTop="8dp"
            android:layout_marginLeft="1dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mulailah menanam dengan mengikuti tutorial yang diberikan oleh Plantie"
            android:fontFamily="@font/montserrat"
            android:textColor="#000"
            android:textSize="12dp" />

        <LinearLayout
            android:id="@+id/lin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bagaimana tidak mudah ?"
                    android:textAlignment="viewStart"
                    android:fontFamily="@font/montserratsemibold"
                    android:textSize="11dp"
                    android:textColor="#000"/>

                <com.codesgood.views.JustifiedTextView
                    android:layout_marginTop="7dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Kita tinggal mengklik tombol ceklis untuk menyimpan pekerjaan yang telah kita lakukan didalam Plantie."
                    android:fontFamily="@font/montserrat"
                    android:textSize="12dp"
                    android:textColor="#000"
                    android:justificationMode="inter_word"/>

            </LinearLayout>

            <ImageView
                android:layout_gravity="center"
                android:layout_weight="1"
                android:layout_alignParentRight="true"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:src="@drawable/btn_yes_board" />

        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
